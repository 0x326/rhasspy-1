#!/usr/bin/env bash
if [[ -z "${rhasspy_dir}" ]]; then
    this_dir="$( cd "$( dirname "$0" )" && pwd )"
    rhasspy_dir="${this_dir}/../lib/rhasspy"
fi

# Include mitlm and phonetisaurus
export LD_LIBRARY_PATH="${rhasspy_dir}/mitlm/lib:${rhasspy_dir}/phonetisaurus/lib:${LD_LIBRARY_PATH}"
export PATH="${rhasspy_dir}/mitlm/bin:${rhasspy_dir}/phonetisaurus/bin:${PATH}"

if [[ -d "${rhasspy_dir}/kaldi" ]]; then
    export KALDI_DIR="${rhasspy_dir}/kaldi"
fi

# Run service
"${rhasspy_dir}/rhasspy" "$@"
